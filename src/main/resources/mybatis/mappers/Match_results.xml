<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.football.mybatis.mapper.MatchResultsMapper">
  <select id="findAll" resultType="com.football.model.MatchResults">
    SELECT * FROM match_results
  </select>

  <insert id="insert" parameterType="com.football.model.MatchResults">
    INSERT INTO match_results (home_goals, away_goals, winner_team_id)
    VALUES (#{homeGoals}, #{awayGoals}, #{winnerTeamId})
  </insert>
</mapper>
