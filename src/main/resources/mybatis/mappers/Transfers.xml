<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.football.mybatis.mapper.TransferMapper">
  <select id="findAll" resultType="com.football.model.Transfer">
    SELECT * FROM transfers
  </select>

  <insert id="insert" parameterType="com.football.model.Transfer">
    INSERT INTO transfers (player_id, from_team_id, to_team_id, fee, transfer_date)
    VALUES (#{playerId}, #{fromTeamId}, #{toTeamId}, #{fee}, #{transferDate})
  </insert>
</mapper>
