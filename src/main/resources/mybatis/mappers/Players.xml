<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.football.mybatis.mapper.PlayerMapper">
  <select id="findAll" resultType="com.football.model.Player">
    SELECT * FROM players
  </select>

  <insert id="insert" parameterType="com.football.model.Player">
    INSERT INTO players (first_name, last_name, nationality, date_of_birth)
    VALUES (#{firstName}, #{lastName}, #{nationality}, #{dateOfBirth})
  </insert>
</mapper>
